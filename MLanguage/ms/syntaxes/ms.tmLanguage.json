{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mscript",
  "patterns": [
    { "match": "\\b(function|let|if|else|while)\\b", "name": "keyword.control.ms" },
    { "match": "\\b(true|false)\\b", "name": "constant.language.boolean.ms" },
    { "match": "\\b[0-9]+\\b", "name": "constant.numeric.ms" },
    { "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()", "name": "entity.name.function.ms" },
    { "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b", "name": "variable.other.ms" },
    { "match": "[+\\-*/=]", "name": "keyword.operator.ms" },
    { "match": "[{}();]", "name": "punctuation.separator.ms" }
  ],

	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ms",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.ms",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ms",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ms"
}