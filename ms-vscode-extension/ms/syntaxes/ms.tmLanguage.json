{
  "scopeName": "source.ms",
  "name": "Mscript",
  "patterns": [
    {
      "match": "\\b(function|let|if|else)\\b",
      "name": "keyword.control.ms"
    },
    {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.ms"
    },
    {
      "match": "\\b[0-9]+\\b",
      "name": "constant.numeric.ms"
    },
    {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()",
      "name": "entity.name.function.ms"
    },
    {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.ms"
    },
    {
      "match": "[+\\-*/=]",
      "name": "keyword.operator.ms"
    },
    {
      "match": "[{}();]",
      "name": "punctuation.separator.ms"
    }
  ]
}